ar.l
%{
#include &quot;ar.tab.h&quot;
extern int yylval;
%}
%%
[0-9]+ {yylval=atoi(yytext);
return NUM;}
\n return 0;

. return yytext[0];
%%

ar.y
%{
#include&lt;stdio.h&gt;
void yyerror(char *s);
%}
%token NUM
%left &#39;+&#39; &#39;-&#39;
%%
sen:exp {printf(&quot;%d&quot;,$$);};
exp:exp&#39;+&#39;exp {$$=$1+$3;}
|exp&#39;-&#39;exp {$$=$1-$3;}
|NUM {$$=$1;};
%%
void yyerror(char *s)
{
fprintf(stderr,&quot;%s\n&quot;,s);
}

int yywrap()
{
return 1;
}
int main()
{
return yyparse();
}
